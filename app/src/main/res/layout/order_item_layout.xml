<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江苏利豪"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:textColor="#ff333333"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#fff94747"
            android:textSize="14sp"
            android:layout_marginRight="11dp">
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F3F3F3">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="#ff999999"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="14sp">
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:textColor="#ff999999"
            android:textSize="12sp">
        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8">

        <com.lihao.market.Custom.MyGridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="11dp"
            android:numColumns="3"
            android:scrollbars="none">
        </com.lihao.market.Custom.MyGridView>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="14sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:textColor="#fff94747"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:id="@+id/all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/price"
            android:text="合计："
            android:layout_centerVertical="true"
            android:textColor="#ff7A7A7A"
            android:textSize="15sp">
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F3F3F3">
    </View>

    <RelativeLayout
        android:id="@+id/ready_get_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/see_order"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="查看订单"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/after_sale"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="申请售后"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/see_order"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_del_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/del_text"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="删除"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/del_see_order"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="查看订单"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/del_text"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/over_order_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/over_del_text"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="删除"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="晒图评价"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/over_del_text"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/confirm_order_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/confirm_order"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="确认订单"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/sale_text"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="申请售后"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/confirm_order"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ready_buy_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/clear_order"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="取消订单"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/buy_text"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:text="立即支付"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/clear_order"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_squire_grey"
            android:textColor="#ff555555"
            android:textSize="14sp">
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F3F3F3">
    </View>


</LinearLayout>
