<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F3F3F3">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:layout_marginTop="103dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="23dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_my_order"
                            android:layout_marginLeft="14dp">
                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的订单"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="36dp"
                            android:textColor="#ff333333"
                            android:textSize="16sp">
                        </TextView>

                        <TextView
                            android:id="@+id/all_order"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:text="全部订单"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/ic_more"
                            android:textColor="#ff666666"
                            android:textSize="13sp">
                        </TextView>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#F3F3F3">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ready_pay"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:layout_centerHorizontal="true"
                                android:src="@mipmap/ic_payment"
                                android:layout_marginTop="20dp">
                            </ImageView>

                            <TextView
                                android:id="@+id/payment_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_toRightOf="@+id/ready_pay"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="-5dp"
                                android:textSize="12dp"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp"
                                android:visibility="gone"
                                android:textColor="#FFFFFF"
                                android:background="@mipmap/ic_red_point">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待付款"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/ready_pay"
                                android:layout_marginTop="4dp"
                                android:textColor="#ff999999"
                                android:textSize="12sp">
                            </TextView>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ready_team"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:src="@mipmap/ic_join"
                                android:layout_marginTop="20dp">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待拼团"
                                android:layout_marginTop="4dp"
                                android:textColor="#ff999999"
                                android:textSize="12sp">
                            </TextView>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ready_receive"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:src="@mipmap/ic_ready_get"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp">
                            </ImageView>

                            <TextView
                                android:id="@+id/ready_get_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_toRightOf="@+id/ready_receive"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="-5dp"
                                android:textSize="12dp"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp"
                                android:visibility="gone"
                                android:textColor="#FFFFFF"
                                android:background="@mipmap/ic_red_point">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待收货"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/ready_receive"
                                android:layout_marginTop="4dp"
                                android:textColor="#ff999999"
                                android:textSize="12sp">
                            </TextView>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ready_comment"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:src="@mipmap/ic_ready_comment"
                                android:layout_marginTop="20dp">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待评价"
                                android:layout_marginTop="4dp"
                                android:textColor="#ff999999"
                                android:textSize="12sp">
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ready_exchange"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:src="@mipmap/ic_ready_exchange"
                                android:layout_marginTop="20dp">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="退换货"
                                android:layout_marginTop="4dp"
                                android:textColor="#ff999999"
                                android:textSize="12sp">
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:orientation="vertical"
                    android:background="@mipmap/ic_person_head_bg"
                    android:gravity="center_horizontal">

                    <com.lihao.market.Custom.CircleImageView
                        android:id="@+id/circle_image"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:layout_marginTop="11dp">
                    </com.lihao.market.Custom.CircleImageView>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp">
                    </TextView>

                </LinearLayout>


            </FrameLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_my_bag"
                    android:layout_marginLeft="14dp">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36dp"
                    android:textColor="#ff333333"
                    android:textSize="16sp">
                </TextView>

                <TextView
                    android:id="@+id/cash_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="资金管理"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/ic_more"
                    android:textColor="#ff666666"
                    android:textSize="13sp">
                </TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="0.5dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:id="@+id/balance_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="#fff94747"
                        android:textSize="18sp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额"
                        android:layout_marginTop="5dp"
                        android:textColor="#ff999999"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff94747"
                        android:textSize="18sp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红包"
                        android:layout_marginTop="5dp"
                        android:textColor="#ff999999"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/point_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/point_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff94747"
                        android:textSize="18sp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:layout_marginTop="5dp"
                        android:textColor="#ff999999"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff94747"
                        android:textSize="18sp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:layout_marginTop="5dp"
                        android:textColor="#ff999999"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/save_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@mipmap/ic_person_save">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏的商品"
                        android:layout_marginTop="6dp"
                        android:textColor="#ff666666"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@mipmap/ic_person_follow">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注的商家"
                        android:layout_marginTop="6dp"
                        android:textColor="#ff666666"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@mipmap/ic_person_watch">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浏览的商品"
                        android:layout_marginTop="6dp"
                        android:textColor="#ff666666"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@mipmap/ic_person_get">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的商品"
                        android:layout_marginTop="6dp"
                        android:textColor="#ff666666"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/about_layout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于利豪"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#ff666666"
                    android:textSize="16sp">
                </TextView>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/ic_more"
                    android:textColor="#ff666666"
                    android:textSize="13sp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_layout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#ff666666"
                    android:textSize="16sp">
                </TextView>

                <TextView
                    android:id="@+id/setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/ic_more"
                    android:textColor="#ff666666"
                    android:textSize="13sp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/version_layout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本升级"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="#ff666666"
                    android:textSize="16sp">
                </TextView>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:text="1.0.1"
                    android:drawableRight="@mipmap/ic_more"
                    android:textColor="#ff666666"
                    android:textSize="13sp">
                </TextView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF">
            </View>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
