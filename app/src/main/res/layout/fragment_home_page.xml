<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="221dp"
                    app:indicator_width="5dp"
                    app:indicator_height="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="14.5dp"
                        android:layout_marginRight="31dp"
                        android:background="@mipmap/ic_search">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="9.5dp"
                            android:background="@mipmap/ic_big">
                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="搜索商品或图片"
                            android:textSize="13sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#FFFFFF">
                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/ic_message">
                    </ImageView>

                </RelativeLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pic1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="4dp"
                        android:background="@mipmap/ic_middle_common"
                        android:layout_weight="1">
                    </ImageView>

                    <ImageView
                        android:id="@+id/pic2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@mipmap/ic_middle_common"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/pic3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@mipmap/ic_middle_common"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1">
                    </ImageView>

                    <ImageView
                        android:id="@+id/pic4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="8dp"
                        android:background="@mipmap/ic_middle_common"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF">

                <com.lihao.market.Custom.MyGridView
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.lihao.market.Custom.MyGridView>
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="gone"
                android:background="#E6EAEE">
            </View>

            <ImageView
                android:id="@+id/jingpin"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="45dp">
            </ImageView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="#E6EAEE">
            </View>

            <GridView
                android:id="@+id/jingpinview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#FFFFFF"
                android:visibility="gone"
                android:numColumns="3">
            </GridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#E6EAEE">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="合作品牌"
                android:textSize="15sp">
            </TextView>

            <ImageView
                android:id="@+id/pinpai"
                android:layout_width="match_parent"
                android:layout_height="211dp">
            </ImageView>

            <ImageView
                android:id="@+id/remai"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </ImageView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E6EAEE">
            </View>

            <com.lihao.market.Custom.MyGridView
                android:id="@+id/remaiview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2">
            </com.lihao.market.Custom.MyGridView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
